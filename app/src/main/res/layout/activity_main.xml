<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/big_card"
                    android:src="@drawable/boyface"
                    android:layout_marginTop="89dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:text="Cartoon Charm"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/min272"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="110dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="0sp"
                    android:text="Free"
                    android:background="@drawable/freeback"
                    android:textAppearance="@style/min" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="280dp"
                    android:columnCount="2"
                    android:rowCount="3">
                    <!--1-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sketch_card"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        app:cardBackgroundColor="#E7F6FF"
                        android:layout_rowWeight="1"
                        android:background="#E7F6FF"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:layout_marginTop="50dp"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sketch"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/min3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="30dp"
                            android:text="Free"
                            android:background="@drawable/freeback"
                            android:textAppearance="@style/min"
                            android:lineSpacingExtra="0sp"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/cardviewone"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--2-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bandw_card"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        app:cardBackgroundColor="#EEE6FF"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="8dp"
                        android:layout_marginTop="50dp"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Black and White"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="127dp"
                            android:layout_height="117dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="160dp"
                                android:layout_height="268dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/cardimgtwo" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="510dp"
                    android:columnCount="2"
                    android:rowCount="3">
                    <!--1-->
                    <!--2-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cartoon_card"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:layout_marginTop="50dp"
                        android:background="#E7F6FF"
                        app:cardBackgroundColor="#FFFACA"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Cartoon"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/min2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="50dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:lineSpacingExtra="0sp"
                            android:text="Free"
                            android:background="@drawable/freeback"
                            android:textAppearance="@style/min" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/girl3card" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rainbow_card"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        app:cardBackgroundColor="#FFE8EC"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="8dp"
                        android:layout_marginTop="50dp"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rainbow Filter"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/min222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/freeback"
                            android:text="Free"
                            android:textAppearance="@style/min"
                            android:lineSpacingExtra="0sp"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <LinearLayout
                            android:layout_width="127dp"
                            android:layout_height="117dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="160dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="0dp"
                                android:src="@drawable/boyfourcard" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="750dp"
                    android:columnCount="1"
                    android:rowCount="3">
                    <!--1-->
                    <!--2-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/reflection_card"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:layout_marginTop="50dp"
                        android:background="#FFE3D3"
                        app:cardBackgroundColor="#FFE3D3"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Reflection Filter"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/min22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="300dp"
                            android:layout_marginTop="50dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:lineSpacingExtra="0sp"
                            android:text="Free"
                            android:background="@drawable/freeback"
                            android:textAppearance="@style/min" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/curlygirlcard" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navview"
        app:menu="@menu/dmenu"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity = "start"/>

</androidx.drawerlayout.widget.DrawerLayout>